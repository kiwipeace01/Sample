    <script>
    items=["state","family","friends","spouse","myself","children"]

    $(function() {
        $( '#sortable' ).sortable({
            connectWith: ".connectedSortable",
            placeholder: "ui-state-highlight",
            update: function( event, ui ) {
                idsInOrder = [];
                $('#sortable li').each(function() {
                    idsInOrder.push($(this).attr('id'));
                });
                $('#order').val(idsInOrder);
            }
        });
        $( "#sortable" ).disableSelection();

        $( "#sortable1" ).sortable({
            connectWith: ".connectedSortable",
            placeholder: "ui-state-highlight",
            receive: function( event, ui ) {
                items.push(ui.item.context.id)
            },
            remove: function( event, ui ) {
                items = items.filter(function(value, index, arr){ 
                    return value != ui.item.context.id;
                });
            }

        }).disableSelection();
    });
    function submitAll() {
        var sum = items.length;
        if(sum==0){
            return true;
        } else{
            alert("Please drag and drop all the people into the blue area");
            return false;
        }
    }

    </script>
